{{ form_start(form, {'attr': {'id': id|default('form')}}) }}

{{ form_widget(form) }}

    {% if with_submit is not defined or with_submit == true %}
        <input type="button" value="Supprimer" class="btn btn-lg btn-block btn-warning" onclick="confirmDelete()">
    {% endif %}

{{ form_end(form) }}

<script>
    var message = '{{ message }}';

    function confirmDelete() {
        bootbox.confirm({
            title: '<h2>Confirmation de suppression !</h2>',
            message: '<p>' + message + '</p>',
            buttons: {
                confirm: {
                    label: 'Confirmer',
                    className: 'btn-success'
                },
                cancel: {
                    label: 'Annuler',
                    className: 'btn-danger'
                }
            },
            callback: function (result) {
                if (result == true) {
                    document.form.submit();
                }
            }
        });
    }
</script>

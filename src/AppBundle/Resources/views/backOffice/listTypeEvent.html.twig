{% extends 'base.html.twig' %}

{% block content %}
    {# Progress bar #}
	{{ include('backOffice/progressbar.html.twig') }}

    <!-- Page Content -->
    <div class="container">

    <hr>
    <hr>

    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {# INPUT CREATE #}
                    <a href="{{ path('admin_category_create') }}"><button type="button" class="btn btn-success pull-right">Ajouter</button></a>

                    <h3>Liste des cat√©gories</h3>
                </div>
                <div class="panel-body">

                    {# Success Message #}
	                {{ include('backOffice/message.html.twig') }}

                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for typeEvent in typeEvents %}
                            <tr data-id="{{ typeEvent.idType }}">
                                <td>{{ typeEvent.libelleType }}</td>
                                <td>
                                    <a href="{{ path('admin_category_edit', {'id':typeEvent.idType}) }}" class="btn btn-primary glyphicon glyphicon-pencil" data-toggle="tooltip" data-placement="top" title="Modifier"></a>
                                    <a href="{{ path('admin_category_delete', {'id':typeEvent.idType}) }}" class="btn btn-danger btn-delete glyphicon glyphicon-trash" data-toggle="tooltip" data-placement="top" title="Supprimer"></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>
    <!-- /.row -->
{% endblock %}
{% block javascripts %}
<!-- FOSJsRoutingBunble -->
<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
<script src="{{ asset('js/bootbox.min.js') }}"></script>
{# SCRIPT PERSO#}
<script src="{{ asset('js/backOffice/deleteTypeEvent.js') }}"></script>
{% endblock %}
